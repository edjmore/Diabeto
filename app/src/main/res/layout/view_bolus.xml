<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_bolus"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        style="@style/TextAppearance.AppCompat.Subhead"
        android:id="@+id/text_title_bolus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_bolus"
        android:layout_marginBottom="@dimen/title_to_val_margin"/>

    <TextView
        android:layout_marginRight="@dimen/val_to_unit_margin"
        android:layout_marginEnd="@dimen/val_to_unit_margin"
        style="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/text_bolus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title_bolus"
        android:text="6.9"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Caption"
        android:id="@+id/text_units_insulin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_bolus"
        android:layout_toRightOf="@+id/text_bolus"
        android:text="@string/units_insulin"/>
</RelativeLayout>