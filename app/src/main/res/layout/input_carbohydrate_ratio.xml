<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
        android:layout_marginRight="@dimen/val_to_unit_margin"
        android:layout_marginEnd="@dimen/val_to_unit_margin"
        style="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/edit_carbohydrate_ratio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Caption"
        android:id="@+id/text_units_carbohydrate_ratio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_carbohydrate_ratio"
        android:layout_toEndOf="@+id/edit_carbohydrate_ratio"
        android:layout_toRightOf="@+id/edit_carbohydrate_ratio"
        android:text="@string/units_carbohydrate_ratio"/>
</RelativeLayout>